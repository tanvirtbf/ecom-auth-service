{
    "name": "auth-service",
    "version": "1.0.0",
    "description": "A user management service",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky install",
        "test": "jest --watch --runInBand",
        "start": "ts-node src/index.ts",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/data-source.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
        "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/data-source.ts",
        "migration:show": "typeorm-ts-node-commonjs migration:show -d src/config/data-source.ts",
        "migration:create": "typeorm-ts-node-commonjs migration:create"
    },
    "author": "Rakesh K <codersgyan@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.5",
        "@types/express": "^4.17.17",
        "@types/express-validator": "^3.0.0",
        "@types/http-errors": "^2.0.1",
        "@types/jest": "^29.5.4",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/node": "^16.11.10",
        "@types/supertest": "^2.0.12",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "jest": "^29.6.4",
        "lint-staged": "^14.0.1",
        "mock-jwks": "^1.0.10",
        "nodemon": "^3.0.1",
        "prettier": "3.0.3",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "10.7.0",
        "typescript": "4.5.2"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-jwt": "^8.4.1",
        "express-validator": "^7.0.1",
        "http-errors": "^2.0.0",
        "jsonwebtoken": "^9.0.2",
        "jwks-rsa": "^3.1.0",
        "pg": "^8.4.0",
        "reflect-metadata": "^0.1.13",
        "rsa-pem-to-jwk": "^1.1.3",
        "typeorm": "0.3.17",
        "winston": "^3.10.0"
    }
}